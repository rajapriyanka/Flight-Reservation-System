<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %highlight{%-5level} [%t] %logger - %msg%n" />
		</Console>

		<RollingFile name="File" fileName="logs/app.log"
			filePattern="logs/app-%d{yyyy-MM-dd}.log.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %logger - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingFile>

		<Failover name="FailoverFile" primary="File">
			<Failovers>
				<AppenderRef ref="Console" />
			</Failovers>
		</Failover>
	</Appenders>

	<Loggers>
		<Root level="info">
			<AppenderRef ref="FailoverFile" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>

</Configuration>
